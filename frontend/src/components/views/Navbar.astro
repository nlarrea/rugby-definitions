---
import LanguagePicker from '@/components/LanguagePicker.astro';
import { getLangFromUrl, useTranslatedPath } from '@/i18n/utils';
import { getI18N } from '@/i18n';

// Translate paths
const lang = getLangFromUrl(Astro.url);
const translatePath = useTranslatedPath(lang);

// Translate page content
const { currentLocale } = Astro;
const i18n = getI18N({ currentLocale });
---

<nav id='navbar'>
	<div id='hamburger-menu'>
		<button class='drop-btn'>
			<div></div>
			<div></div>
			<div></div>
		</button>

		<div class='dropdown-content'>
			<a href={translatePath('/')}>{i18n.NAVBAR.SEARCH}</a>
			<a href={translatePath('/examen')}>{i18n.NAVBAR.QUIZ}</a>
			<a href={translatePath('/mas-rugby')}>{i18n.NAVBAR.ABOUT}</a>
		</div>
	</div>

	<a href={translatePath('/')} class='nav-link'>{i18n.NAVBAR.SEARCH}</a>
	<a href={translatePath('/examen')} class='nav-link'>{i18n.NAVBAR.QUIZ}</a>
	<a href={translatePath('/mas-rugby')} class='nav-link'
		>{i18n.NAVBAR.ABOUT}</a
	>
	<LanguagePicker />
</nav>

<style>
	nav#navbar {
		flex: 0 0 auto;

		width: var(--app-max-width);
		height: 4em;
		padding: 0 3em;
		margin-inline: auto;

		display: flex;
		align-items: center;
		justify-content: space-between;

		position: sticky;
		top: 0;
		z-index: 10;

		color: light-dark(var(--light-text), var(--dark-text));
		background-color: light-dark(
			hsl(from var(--light-bg) h s calc(l - 5)),
			hsl(from var(--dark-bg) h s calc(l - 10))
		);
		border-radius: 0 0 1.5em 1.5em;
		box-shadow: 0px 2px 4px 0px rgba(0, 0, 0, 0.2);

		a.nav-link {
			color: inherit;
			text-decoration: none;
			transition: all 0.3s;
			font-weight: 500;

			&:hover,
			&:focus,
			&.active-nav {
				color: light-dark(var(--light-accent), var(--dark-accent));
			}
		}

		#hamburger-menu {
			display: none;
		}
	}

	@media screen and (max-width: 768px) {
		nav#navbar {
			width: 100%;
			padding: 0 2em;
			border-radius: 0;

			a.nav-link {
				display: none;
			}

			#hamburger-menu {
				display: inline-block;
				position: relative;

				.drop-btn {
					width: 24px;
					height: 18px;

					cursor: pointer;
					outline: none;

					display: flex;
					flex-direction: column;
					align-items: center;
					justify-content: space-between;

					background-color: transparent;
					border: 0;

					transition: all 0.3s;

					div {
						width: 100%;
						height: 2px;

						background-color: light-dark(
							var(--light-text),
							var(--dark-text)
						);
						border-radius: 5px;

						transform-origin: left;
						transition: all 0.3s;
					}

					&:hover div,
					&:focus div {
						background-color: light-dark(
							var(--light-accent),
							var(--dark-accent)
						);
					}
				}

				.dropdown-content {
					min-width: 160px;

					display: none;
					position: absolute;
					z-index: 2;

					background-color: light-dark(
						hsl(from var(--light-bg) h s calc(l - 5)),
						hsl(from var(--dark-bg) h s calc(l - 5))
					);
					box-shadow: 0px 8px 16px 0px rgba(0, 0, 0, 0.2);

					a {
						padding: 0.5em 1em;

						display: block;
						text-decoration: none;
						text-wrap: nowrap;

						color: inherit;
						font-weight: 500;

						transition: all 0.3s;

						&:hover,
						&:focus,
						&.active-nav {
							color: light-dark(
								var(--light-accent),
								var(--dark-accent)
							);
						}
					}
				}
			}

			&.is-open {
				#hamburger-menu {
					.drop-btn {
						div:first-child {
							transform: rotate(45deg);
						}

						div:nth-child(2) {
							opacity: 0;
						}

						div:last-child {
							transform: rotate(-45deg);
						}
					}

					.dropdown-content {
						display: block;
					}
				}
			}
		}
	}
</style>

<script>
	const nav = document.querySelector('#navbar');
	const navLinks = nav?.querySelectorAll('a');
	const currentUrl = window.location.href;

	navLinks?.forEach((link) => {
		if (link.href === currentUrl) {
			link.classList.add('active-nav');
		}
	});

	const hamburgerBtn = document.querySelector('#hamburger-menu');
	hamburgerBtn?.addEventListener('click', () => {
		nav?.classList.toggle('is-open');
	});
</script>
